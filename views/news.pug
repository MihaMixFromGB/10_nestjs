extends layout.pug

block content
  div(class='flex flex-row gap-5 pt-4 justify-center flex-wrap')
    each item of news
      div(class='w-1/3 bg-slate-100 p-2 drop-shadow-md')
        if item.cover 
          img(class='object-cover w-full h-48' src=item.cover)
        h2(class='text-xl font-bold text-stone-800')= item.title
        p(class='text-sm text-stone-500') Author: #{`${item.author.firstName} ${item.author.lastName}`}
        p(class='text-sm text-stone-500') Created at: #{item.createdAt.toLocaleString('ru')}
        p= item.description