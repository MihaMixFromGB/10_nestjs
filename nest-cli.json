{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../views/",
        "outDir": "dist/views/"
      },
      {
        "include": "../public/styles/style.css",
        "outDir": "dist/public/"
      },
      {
        "include": "../public/images/",
        "outDir": "dist/public/"
      },
      {
        "include": "../public/favicon.ico",
        "outDir": "dist/public/"
      },
      {
        "include": "../assets",
        "outDir": "dist/assets"
      }
    ],
    "watchAssets": true
  }
}
